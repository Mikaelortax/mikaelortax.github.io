---
import '../styles/global.css';
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
interface Props {
  title: string;
  lang: 'en' | 'sv';
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <header class="px-4 py-3">
      <div class="mx-auto flex w-full max-w-6xl justify-center sm:justify-end">
        <LanguageSwitcher />
      </div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
