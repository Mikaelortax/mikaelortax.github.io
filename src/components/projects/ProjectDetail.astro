---
interface Props {
  title: string;
  excerpt: string;
  role: string;
  stack: string[];
  tags: string[];
  outcomes: string[];
  backHref: string;
  backLabel: string;
  contactHref: string;
  contactLabel: string;
  ctaTitle: string;
  ctaText: string;
}

const {
  title,
  excerpt,
  role,
  stack,
  tags,
  outcomes,
  backHref,
  backLabel,
  contactHref,
  contactLabel,
  ctaTitle,
  ctaText,
} = Astro.props;
---

<article class="space-y-8" aria-labelledby="project-title">
  <section class="band band--surface">
    <a href={backHref} class="inline-flex text-sm font-semibold text-cyan-300 transition hover:text-cyan-200">{backLabel}</a>

    <h1 id="project-title" class="mt-6 text-3xl font-semibold tracking-tight text-white md:text-4xl">{title}</h1>
    <p class="mt-4 max-w-3xl text-base leading-relaxed text-neutral-300">{excerpt}</p>

    <div class="mt-8 grid grid-cols-1 gap-4 md:grid-cols-3">
      <div class="ui-card p-5">
        <p class="text-xs uppercase tracking-[0.16em] text-cyan-300">Role</p>
        <p class="mt-3 text-sm text-neutral-200">{role}</p>
      </div>
      <div class="ui-card p-5">
        <p class="text-xs uppercase tracking-[0.16em] text-cyan-300">Stack</p>
        <p class="mt-3 text-sm text-neutral-200">{stack.join(' · ')}</p>
      </div>
      <div class="ui-card p-5">
        <p class="text-xs uppercase tracking-[0.16em] text-cyan-300">Tags</p>
        <div class="mt-3 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="rounded-full border border-white/15 bg-white/5 px-2.5 py-1 text-xs text-neutral-200">{tag}</span>
          ))}
        </div>
      </div>
    </div>

    <section class="mt-8" aria-labelledby="outcomes-title">
      <h2 id="outcomes-title" class="text-lg font-semibold text-white">Outcomes</h2>
      <ul class="mt-4 grid grid-cols-1 gap-3 md:grid-cols-2">
        {outcomes.map((outcome) => (
          <li class="ui-card p-4 text-sm text-neutral-200">{outcome}</li>
        ))}
      </ul>
    </section>

    <section class="prose prose-invert mt-10 max-w-none prose-headings:text-white prose-p:text-neutral-300 prose-strong:text-white">
      <slot />
    </section>
  </section>

  <section class="band band--mesh seam-top" aria-label="Project contact call-to-action">
    <h2 class="text-2xl font-semibold tracking-tight text-white md:text-3xl">{ctaTitle}</h2>
    <p class="mt-4 max-w-2xl text-neutral-300">{ctaText}</p>
    <a
      href={contactHref}
      class="mt-6 inline-flex rounded-xl bg-cyan-300 px-5 py-3 text-sm font-semibold text-neutral-950 transition hover:bg-cyan-200"
    >
      {contactLabel}
    </a>
  </section>
</article>
