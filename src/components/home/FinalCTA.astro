---
interface Props {
  lang?: 'sv' | 'en';
}

const { lang = 'sv' } = Astro.props;
const isEn = lang === 'en';
const contactHref = isEn ? '/en/contact' : '/kontakt';
const linkedInHref = 'https://www.linkedin.com/in/mikael-johansson-5084515b/';
---

<section id="contact" class="band band--mesh seam-top" aria-labelledby="contact-title">
  <header class="section-head reveal-block">
    <p class="section-kicker">{isEn ? 'Contact' : 'Kontakt'}</p>
    <h2 id="contact-title" class="section-title">{isEn ? 'Ready for the next step?' : 'Vill du ta nästa steg?'}</h2>
    <p class="section-lead">
      {
        isEn
          ? 'Get in touch if you want to discuss an IT project, an employment role, or opportunities in professional driving.'
          : 'Hör av dig om du vill diskutera IT-projekt, anställning eller möjligheter inom yrkeskörning.'
      }
    </p>
  </header>

  <div class="mt-8 flex flex-wrap justify-center gap-3">
    <a
      href={contactHref}
      class="btn-primary px-5 py-3 text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-cyan-200 focus-visible:ring-offset-2 focus-visible:ring-offset-neutral-950"
    >
      {isEn ? 'Open contact page' : 'Öppna kontaktsidan'}
    </a>
    <a
      href={linkedInHref}
      class="btn-secondary px-5 py-3 text-sm focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-white/70 focus-visible:ring-offset-2 focus-visible:ring-offset-neutral-950"
    >
      {isEn ? 'LinkedIn profile' : 'LinkedIn-profil'}
    </a>
  </div>

  <p class="mt-4 text-sm text-neutral-400">
    {isEn ? 'Typical response time: 1-2 business days.' : 'Jag svarar normalt inom 1-2 arbetsdagar med ett tydligt nästa steg.'}
  </p>
</section>
