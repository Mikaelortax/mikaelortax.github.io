  <ul class="mt-9 grid gap-4 sm:grid-cols-2 xl:grid-cols-5" aria-label="Leveransprinciper">
    {proofItems.map((item) => (
      <li class="ui-card ui-card--interactive proof-card reveal-card p-5 text-left" tabindex="0">
        <div class="proof-topline" aria-hidden="true"></div>
        <p class="proof-index">{item.id}</p>
        <h3 class="mt-2 text-lg font-semibold text-white">{item.title}</h3>
        <p class="mt-2 text-sm text-neutral-300">{item.text}</p>
