    <div class="mt-8 flex justify-center">
      <a href="/" class="btn-primary inline-flex items-center gap-2 px-6 py-3 text-sm">
        Öppna huvudsidan
        <span aria-hidden="true">-&gt;</span>
      </a>
    </div>
  </section>
