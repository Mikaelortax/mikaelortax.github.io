const skills = {
  seo: ['Screaming Frog', 'Google Search Console', 'GA4', 'SEMrush', 'Ahrefs', 'Majestic'],
  dev: ['JavaScript', 'TypeScript', 'PHP', 'HTML', 'CSS', 'SQL', 'React', 'Astro'],
  automation: ['n8n', 'REST API', 'Webhooks', 'CRM workflows', 'Data quality'],
  ai: ['OpenAI', 'ChatGPT API', 'Claude', 'Perplexity', 'Midjourney', 'Stable Diffusion'],
  cms: ['WordPress', 'WooCommerce', 'OpenCart', 'Magento', 'Prestashop', 'Webflow'],
