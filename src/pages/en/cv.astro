---
import BaseLayout from '../../layouts/BaseLayout.astro';

const profileHighlights = [
  { label: 'Experience', value: '20+ years', text: 'SEO, web engineering, and digital growth since 2003.' },
  { label: 'Role range', value: 'Specialist -> Manager', text: 'From hands-on implementation to leadership and agency operations.' },
  { label: 'Parallel track', value: 'Professional driver in training', text: 'Building transport competence with C-license qualification, safety modules, and forklift certifications.' },
];

const keyStrengths = [
  'Technical SEO with clear connection to business results',
  'Product-oriented web engineering with high performance and clean architecture',
  'Workflow automation between forms, CRM, inbox, and teams',
  'Professional driving competence in progress with focus on heavy vehicle safety and operational responsibility',
  'AI-assisted production for faster iteration and quality control',
  'Stable delivery model from analysis to release and follow-up',
];

const recentExperience = [
  {
    role: 'Owner & Agency Lead',
    company: 'Imba SEO',
    period: 'Jul 2022 - Dec 2024',
    summary:
      'Founder and agency lead with strategic and operational responsibility for technical SEO, content, link strategy, and AI-assisted workflows.',
  },
  {
    role: 'Head of SEO',
    company: 'SEO Byrå',
    period: 'Oct 2021 - Jun 2022',
    summary:
      'Led SEO delivery with focus on technical quality, on-page/off-page execution, analysis, and lead generation for stronger visibility and conversion.',
  },
  {
    role: 'Digital Marketing Specialist',
    company: 'Empire Web',
    period: 'Apr 2020 - Jul 2021',
    summary:
      'Worked with SEO, SEM, CRO, copy, and website development to improve both traffic and commercial outcomes.',
  },
  {
    role: 'Freelance CTO/Growth Hacker',
    company: 'AdNIKA',
    period: 'May 2020 - Oct 2020',
    summary:
      'Built websites and worked with SEO, digital marketing, and CRM processes across client projects.',
  },
];

