    period: 'Aug 2016 - Feb 2017',
  },
  {
    role: 'CEO / Developer / Co-owner',
    company: 'E-komet AB',
    period: 'May 2015 - May 2016',
  },
  {
    role: 'SEO Specialist',
    company: 'DoubleSearch AB',
    period: 'Aug 2014 - Apr 2015',
  },
  {
    role: 'Founder',
    company: 'Mijo Media',
    period: 'Nov 2012 - May 2016',
  },
];

const certifications = [
  'SEMrush Certification for SEO',
  'SEMrush Certification for PPC Specialists',
  'SEMrush SEO Toolkit Exam (Advanced)',
  'Google Analytics Individual Qualification',
  'Google Ads Search Certification',
  'HubSpot Inbound Marketing Certification',
  'HubSpot Content Marketing Certification',
