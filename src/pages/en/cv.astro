const transportQualifications = [
  { label: 'Driving licenses', value: 'B and C' },
  { label: 'Road work safety', value: 'Arbete På Väg: 1.1, 1.2, 1.3' },
  { label: 'Forklift license', value: 'A2, A2, A4, B1, D' },
  { label: 'ADR', value: 'Basic and explosive goods' },
];

const education = [
  {
    title: 'Professional driver training',
    school: 'Transport education',
    period: 'September 2025 - Present',
    details: [
      'Load securing',
      'YKB',
      'C-license qualification',
      'Forklift qualifications',
      'Practical modules in transport safety and professional driving',
    ],
  },
  {
    title: 'Media Technology (interactive systems)',
    school: 'Blekinge Institute of Technology, Karlshamn',
    period: '1 Sep 2008 - 15 Jun 2010',
    details: [
      'Programming: PHP, XHTML, CSS, Java, JavaScript, and MySQL',
      'Social media and digital communication',
      'Technical and interactive systems in media contexts',
    ],
  },
  {
    title: 'IT-Media',
    school: 'Johnbauer Gymnasiet, Karlshamn',
    period: '1 Sep 2005 - 15 Jun 2008',
    details: [
      'Foundation courses in the media industry',
      'Media communication',
      'Media studies',
    ],
  },
